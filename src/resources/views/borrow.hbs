<table style="width:100%" >
  <tr>
    <th>MSSV</th>
    <th>Book id</th>
    <th>Ngày mượn</th>
    <th>Ngày trả</th>
    <th>id Người cho mượn</th>
    <th>Chú thích</th>
  </tr>

    {{#each dataTable}} 
        <tr>
            <td>{{this.MSSV}}</td>
            <td>{{this.book_id}}</td>
            <td>{{this.borrow_date}}</td>
            <td>{{this.pay_date}}</td>
            <td>{{this.staff}}</td>
            <td>{{this.note}}</td>
            <td>
              <a href="/borrow/edit?id={{this.id}}" class="btn btn-link">Sửa</a>
              <a href="/borrow/delete?id={{this.id}}" class="btn btn-link">Xóa</a>
            </td>
        </tr>
    {{/each}}
    
</table>
<div class="add-borrow">
  <a href="/borrow/add">Thêm</a>
</div>